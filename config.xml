<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mercedesbenzexpo.app" version="06.03.20" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
	<name short="MB Expo">Mercedes-Benz Expo App</name>
	<description>
		Aplicaci√≥n Mobile para exposiciones.
	</description>
	<author email="iv@neomedia.com.ar" href="http://neomedia.com.ar">
		Ivan Varde
	</author>
	<content src="index.html" />
	<access origin="*" />
	<allow-navigation href="*://*/*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<allow-intent href="mailto:*" />
	<allow-intent href="geo:*" />
	<platform name="android">
		<allow-intent href="market:*" />
		<icon src="ic_launcher.png" />
	</platform>
	<platform name="ios">
		<allow-intent href="itms:*" />
		<allow-intent href="itms-apps:*" />
	</platform>
	<plugin name="cordova-plugin-network-information" spec="^2.0.1" />
	<plugin name="cordova-plugin-dialogs" spec="^2.0.1" />
	<plugin name="cordova-plugin-whitelist" spec="1" />
	<!--<plugin name="cordova-plugin-postrq" spec="https://github.com/andresiggesjo/cordova-plugin-postrq.git#1.0.2" />-->
	<plugin name="cordova-plugin-postrq" spec="1.0.2" />

	<preference name="android-minSdkVersion" value="16" />
	<preference name="InAppBrowserStorageEnabled" value="true" />
	<preference name="LoadUrlTimeoutValue" value="60000" />
	<engine name="browser" spec="^5.0.3" />
	<engine name="android" spec="^7.0.0" />
</widget>
